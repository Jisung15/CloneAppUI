<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_transport_result_title"
            style="@style/transport_result_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/transport_result_text" />

        <ImageView
            android:id="@+id/iv_choice_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart"
            android:scaleType="centerCrop"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_transport_result_text"
        style="@style/transport_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/transport_result_text_value" />

    <TextView
        android:id="@+id/tv_transport_result_title2"
        style="@style/transport_result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/transport_result_text2" />

    <TextView
        android:id="@+id/tv_transport_result_text2"
        style="@style/transport_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/transport_result_text2_value" />

</LinearLayout>